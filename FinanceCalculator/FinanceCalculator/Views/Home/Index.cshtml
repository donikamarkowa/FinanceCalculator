@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to FinanceCalculator</h1>
    <p class="lead mt-3">Easily manage your finances with our specialized calculators.</p>
    <hr class="my-4">
</div>

<div class="container mt-4">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-coins fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Credit Calculator</h5>
                    <p class="card-text">Plan your loans efficiently with our detailed credit calculator.</p>
                    <a asp-controller="CreditCalculation" asp-action="Index" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-sync fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Refinancing Calculator</h5>
                    <p class="card-text">Calculate the benefits of refinancing your existing loans.</p>
                    <a asp-controller="RefinancingCalculation" asp-action="Index" class="btn btn-success">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-car fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Leasing Calculator</h5>
                    <p class="card-text">Find the best leasing options for your next big purchase.</p>
                    <a asp-controller="LeasingCalculation" asp-action="Index" class="btn btn-warning">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="text-center">
        <h2>Why Choose FinanceCalculator?</h2>
        <p class="mt-3">Our tools are designed to make financial planning easy, accurate, and reliable.</p>
        <ul class="list-unstyled mt-4">
            <li><i class="fas fa-check text-success"></i> User-friendly interface</li>
            <li><i class="fas fa-check text-success"></i> Detailed calculations</li>
            <li><i class="fas fa-check text-success"></i> Free to use</li>
        </ul>
    </div>
</div>
