@model FinanceCalculator.Entities.Refinancing

@{
    ViewData["Title"] = "Refinancing Calculation Results";
}

<div class="container mt-4">
    <h2 class="text-center">Refinancing Calculation Results</h2>

    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Current Loan Amount:</strong> <span class="text-primary">@Model.CurrentLoanAmount</span></p>
                <p><strong>New Interest Rate (%):</strong> <span class="text-primary">@Model.NewInterestRate</span></p>
                <p><strong>New Duration (Months):</strong> <span class="text-primary">@Model.NewDurationMonths</span></p>
            </div>
            <div class="col-md-6">
                <p><strong>Monthly Payment:</strong> <span class="text-success">@Math.Round(Model.MonthlyPayment, 2)</span></p>
                <p><strong>Total Payment:</strong> <span class="text-success">@Math.Round(Model.TotalPayment, 2)</span></p>
                <p><strong>Savings:</strong> <span class="text-success">@Math.Round(Model.Savings, 2)</span></p>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "RefinancingCalculation")" class="btn btn-secondary btn-lg">Go Back</a>
    </div>
</div>
