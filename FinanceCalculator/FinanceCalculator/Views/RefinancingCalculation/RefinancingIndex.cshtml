@model FinanceCalculator.Entities.Refinancing

@{
    ViewData["Title"] = "Refinancing Calculation";
}

<h2>Refinancing Calculation</h2>

<form asp-action="Calculate" method="post">
    <div class="form-group">
        <label asp-for="CurrentLoanAmount" class="control-label"></label>
        <input asp-for="CurrentLoanAmount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="CurrentLoanAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewInterestRate" class="control-label"></label>
        <input asp-for="NewInterestRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NewInterestRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewDurationMonths" class="control-label"></label>
        <input asp-for="NewDurationMonths" class="form-control" type="number" />
        <span asp-validation-for="NewDurationMonths" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
