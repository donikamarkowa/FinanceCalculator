@model FinanceCalculator.Entities.Refinancing

@{
    ViewData["Title"] = "Refinancing Calculation";
}

<div class="container mt-4">
    <h2 class="text-center">Calculate Your Refinancing</h2>

    <form asp-action="Calculate" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="CurrentLoanAmount" class="control-label col-md-4">Current Loan Amount</label>
            <div class="col-md-6">
                <input asp-for="CurrentLoanAmount" class="form-control" type="number" step="0.01" placeholder="Enter current loan amount" />
                <span asp-validation-for="CurrentLoanAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewInterestRate" class="control-label col-md-4">New Interest Rate (%)</label>
            <div class="col-md-6">
                <input asp-for="NewInterestRate" class="form-control" type="number" step="0.01" placeholder="Enter new interest rate" />
                <span asp-validation-for="NewInterestRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewDurationMonths" class="control-label col-md-4">New Duration (Months)</label>
            <div class="col-md-6">
                <input asp-for="NewDurationMonths" class="form-control" type="number" placeholder="Enter new duration in months" />
                <span asp-validation-for="NewDurationMonths" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
