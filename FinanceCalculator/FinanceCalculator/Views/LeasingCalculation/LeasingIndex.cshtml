@model FinanceCalculator.Entities.Leasing

@{
    ViewData["Title"] = "Leasing Calculator";
}

<div class="container mt-4">
    <h2 class="text-center">Calculate Your Leasing</h2>

    <form asp-action="Calculate" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="LeasingAmount" class="control-label col-md-4">Leasing Amount</label>
            <div class="col-md-6">
                <input asp-for="LeasingAmount" class="form-control" type="number" step="0.01" placeholder="Enter the amount" value="@Model?.LeasingAmount" />
                <span asp-validation-for="LeasingAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="InterestRate" class="control-label col-md-4">Interest Rate (%)</label>
            <div class="col-md-6">
                <input asp-for="InterestRate" class="form-control" type="number" step="0.01" placeholder="Enter interest rate" value="@Model?.InterestRate" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DurationMonths" class="control-label col-md-4">Duration (Months)</label>
            <div class="col-md-6">
                <input asp-for="DurationMonths" class="form-control" type="number" placeholder="Enter duration in months" value="@Model?.DurationMonths" />
                <span asp-validation-for="DurationMonths" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DownPayment" class="control-label col-md-4">Down Payment</label>
            <div class="col-md-6">
                <input asp-for="DownPayment" class="form-control" type="number" step="0.01" placeholder="Enter down payment" value="@Model?.DownPayment" />
                <span asp-validation-for="DownPayment" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
