@model FinanceCalculator.Entities.Leasing

@{
    ViewData["Title"] = "Leasing Calculator";
}

<div class="container mt-4">
    <h2 class="text-center">Calculate Your Leasing</h2>

    <form method="post" action="@Url.Action("Calculate", "LeasingCalculation")" class="form-horizontal">
        <div class="form-group">
            <label for="LeasingAmount" class="control-label col-md-4">Leasing Amount</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="LeasingAmount" name="LeasingAmount" value="@Model?.LeasingAmount" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.LeasingAmount)</span>
            </div>
        </div>

        <div class="form-group">
            <label for="InterestRate" class="control-label col-md-4">Interest Rate (%)</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="InterestRate" name="InterestRate" value="@Model?.InterestRate" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.InterestRate)</span>
            </div>
        </div>

        <div class="form-group">
            <label for="DurationMonths" class="control-label col-md-4">Duration (Months)</label>
            <div class="col-md-6">
                <input type="number" class="form-control" id="DurationMonths" name="DurationMonths" value="@Model?.DurationMonths" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.DurationMonths)</span>
            </div>
        </div>

        <div class="form-group">
            <label for="DownPayment" class="control-label col-md-4">Down Payment</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="DownPayment" name="DownPayment" value="@Model?.DownPayment" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.DownPayment)</span>
            </div>
        </div>


        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
