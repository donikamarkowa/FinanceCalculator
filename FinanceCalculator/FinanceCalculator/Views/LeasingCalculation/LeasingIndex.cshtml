@model FinanceCalculator.Entities.Leasing

@{
    ViewData["Title"] = "Leasing Calculator";
}

<div class="container mt-4">
    <h2 class="text-center">Calculate Your Leasing</h2>

    <form method="post" action="@Url.Action("Calculate", "LeasingCalculation")" class="form-horizontal">
        <div class="form-group">
            <label for="LeasingAmount" class="control-label col-md-4">Leasing Amount</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="LeasingAmount" name="LeasingAmount" required placeholder="Enter leasing amount" />
            </div>
        </div>

        <div class="form-group">
            <label for="InterestRate" class="control-label col-md-4">Interest Rate (%)</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="InterestRate" name="InterestRate" required placeholder="Enter interest rate" />
            </div>
        </div>

        <div class="form-group">
            <label for="DurationMonths" class="control-label col-md-4">Duration (Months)</label>
            <div class="col-md-6">
                <input type="number" class="form-control" id="DurationMonths" name="DurationMonths" required placeholder="Enter duration in months" />
            </div>
        </div>

        <div class="form-group">
            <label for="DownPayment" class="control-label col-md-4">Down Payment</label>
            <div class="col-md-6">
                <input type="number" step="0.01" class="form-control" id="DownPayment" name="DownPayment" required placeholder="Enter down payment" />
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
