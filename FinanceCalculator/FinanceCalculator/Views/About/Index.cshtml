@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <h1 class="text-center">About FinanceCalculator</h1>
    <p class="lead text-center mt-3">Helping you make smarter financial decisions with ease.</p>
    <hr class="my-4">

    <div class="row">
        <div class="col-md-6">
            <h3>Our Mission</h3>
            <p>
                FinanceCalculator was created to help individuals and businesses make informed financial decisions.
                We believe in transparency, accuracy, and ease of use when it comes to financial planning.
            </p>
        </div>
        <div class="col-md-6">
            <h3>What We Offer</h3>
            <ul class="list-group">
                <li class="list-group-item"><i class="fas fa-check text-success"></i> Loan & refinancing calculations</li>
                <li class="list-group-item"><i class="fas fa-check text-success"></i> Leasing options assessment</li>
                <li class="list-group-item"><i class="fas fa-check text-success"></i> User-friendly and accessible platform</li>
            </ul>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h3>Technologies We Use</h3>
        <p class="mt-3">FinanceCalculator is built using modern and robust technologies.</p>
        <div class="d-flex justify-content-center gap-3">
            <span class="badge bg-primary">ASP.NET Core</span>
            <span class="badge bg-secondary">C#</span>
            <span class="badge bg-success">Entity Framework</span>
            <span class="badge bg-danger">MS SQL</span>
            <span class="badge bg-warning text-dark">Bootstrap</span>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h3>Meet the Creator</h3>
        <p class="mt-3">This project was developed as part of a software engineering course at NBU.</p>
        <div class="d-flex justify-content-center">
            <img src="~/images/image.jpg" class="rounded-circle" alt="Developer Photo" width="120" height="120">
        </div>
        <p class="mt-3"><strong>Donika Markova</strong> – Software Developer</p>
    </div>
</div>
