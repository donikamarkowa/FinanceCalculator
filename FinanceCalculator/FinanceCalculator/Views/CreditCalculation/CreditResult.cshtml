@model FinanceCalculator.Entities.Credit

@{
    ViewData["Title"] = "Credit Calculation Result";
}

<div class="container mt-4">
    <h2 class="text-center">Calculation Results</h2>

    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Amount:</strong> <span class="text-primary">@Model.Amount</span></p>
                <p><strong>Interest Rate:</strong> <span class="text-primary">@Model.InterestRate %</span></p>
                <p><strong>Duration (Months):</strong> <span class="text-primary">@Model.DurationMonths</span></p>
            </div>
            <div class="col-md-6">
                <p><strong>Monthly Payment:</strong> <span class="text-success">@Model.MonthlyPayment.ToString("F2")</span></p>
                <p><strong>Total Payment:</strong> <span class="text-success">@Model.TotalPayment.ToString("F2")</span></p>
                <p><strong>Total Interest:</strong> <span class="text-success">@Model.TotalInterest.ToString("F2")</span></p>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "CreditCalculation")" class="btn btn-secondary btn-lg">Go Back</a>
    </div>
</div>
